            <div class="col-md-6">
              <label for="addstudentModalDOB" class="form-label">Date of Birth</label>
              <input type="date" class="form-control" id="addstudentModalDOB" name="DOB">
            </div>
            <div class="col-md-6">
              <label for="addstudentModalGender" class="form-label">Gender</label>
              <select id="addstudentModalGender" class="form-select" name="gender">
                <option selected>Male</option>
                <option>Female</option>
                <option>Other</option>
              </select>
            </div>
            <div class="col-md-6">
              <label for="addstudentModalfather" class="form-label">Father's Name</label>
              <input type="text" class="form-control" id="addstudentModalfather" name="fatherName">
            </div>
            <div class="col-md-6">
              <label for="fatherPhone" class="form-label">Father's Tel:</label>
              <input type="tel" class="form-control" id="fatherPhone" name="fatherPhone">
            </div>
            <div class="col-md-6">
              <label for="addstudentModalmother" class="form-label">Mother's Name</label>
              <input type="text" class="form-control" id="addstudentModalmother" name="motherName">
            </div>
            <div class="col-md-6">
              <label for="motherPhone" class="form-label">Mother's Tel</label>
              <input type="tel" class="form-control" id="motherPhone" name="motherPhone">
            </div>
            <div class="col-md-12">
              <label for="formFile" class="form-label">Upload a Picture</label>
              <input class="form-control" type="file" id="studentPicture" name="stdPhoto">
            </div>
            <div class="col-md-6 ms-6">
              <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Submit</button>
            </div>
          </form>
        </div>
