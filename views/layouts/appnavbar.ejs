      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addstudentModalLabel">Add New Student</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
        </div>
        <div class="modal-body">
          <form class="row g-3" action="/addstudent" method="POST">
            <div class="col-md-6">
              <label for="addstudentModalSurname" class="form-label">Surname</label>
              <input type="text" class="form-control" id="addstudentModalSurname" name="surname">
            </div>
            <div class="col-md-6">
              <label for="addstudentModalFirstname" class="form-label">Firstname</label>
              <input type="text" class="form-control" id="addstudentModalFirstname" name="firstname">
